generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {      
  id              String   @id @default(cuid())
  clerkId         String   @unique
  name            String
  username        String?  @unique 
  email           String   @unique
  imageUrl        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  notes Note[]
  rooms Room[] @relation("RoomUsers")
  ownedRooms Room[] @relation("RoomOwner")

  @@index([id, clerkId])
}

model Room {
  id       String @id @default(cuid())
  roomName String

  // Owner relation (ensure DB-level ownerId not-null constraint is satisfied)
  ownerId  String
  owner    User   @relation("RoomOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  // Relations
  notes Note[]
  users User[]  @relation("RoomUsers")

  @@index([id])
  @@index([ownerId])
}

model Note {
  id              String     
  noteName        String @unique
  content         String
  createdBy      String
  x               Float    @default(0)
  y               Float    @default(0)
  z               Int      @default(0)
  color           String   @default("#ff0000")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  // also add colour and author name

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  roomId String
  room   Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)


  @@index([roomId, createdBy])
  @@index([userId])
}
