generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  name      String
  email     String   @unique
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  notes Note[]
  rooms Room[]
}

model Room {
  id   String @id @default(cuid())
  name String

  // Relations
  notes Note[]
  users User[] 
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String
  x         Float    @default(0)
  y         Float    @default(0)
  color     String   @default("#ff0000")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // also add colour and author name

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  roomId String
  room   Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)
}
